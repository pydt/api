{
  "compilerOptions": {
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "noUnusedLocals": true,
    "module": "commonjs",
    "lib": [
      "es6"
    ],
    "sourceMap": true,
    "target": "es6",
    "types": [
      "node",
      "reflect-metadata",
      "webpack-env"
    ]
  },
  "include": [
    "api/**/*.ts",
    "functions/**/*.ts",
    "lib/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}